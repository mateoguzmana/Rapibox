    #color-picker-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-default-label', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                    h4#modal-default-label.modal-title Color Picker
                .modal-body
                    form.form-horizontal.form-seperated(role="form")
                        .form-body
                            .form-group
                                label.col-md-3.control-label Default
                                .col-md-9
                                    input.colorpicker-default.form-control(type='text')
                            .form-group
                                label.col-md-3.control-label RGBA format
                                .col-md-9
                                    input.colorpicker-rgba.form-control(type='text', data-color-format='rgba')
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button.btn.btn-success(type='button') Save changes
    #date-range-picker-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-default-label', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                    h4#modal-default-label.modal-title Date Range Picker
                .modal-body
                    form.form-horizontal.form-seperated(role="form")
                        .form-body
                            .form-group
                                label.col-md-3.control-label Date
                                .col-md-7
                                    .input-group
                                        .input-group-addon
                                            i.fa.fa-calendar
                                        input.form-control(type='text', name='daterangepicker-default')
                            .form-group
                                label.col-md-3.control-label Date & Time
                                .col-md-7
                                    .input-group
                                        input.form-control(type='text', name='daterangepicker-date-time')
                                        .input-group-addon
                                            i.fa.fa-calendar
                            .form-group
                                label.col-md-3.control-label Advance Date Range Picker
                                .col-md-6
                                    .btn.btn-success.reportrange
                                        i.fa.fa-calendar
                                        | &nbsp;
                                        span
                                        | &nbsp;report&nbsp;
                                        i.fa.fa-angle-down
                                        input(type='hidden', name="datestart")
                                        input(type='hidden', name="endstart")
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button.btn.btn-success(type='button') Save changes
    #datetime-picker-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-default-label', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                    h4#modal-default-label.modal-title Datetime Picker
                .modal-body
                    form.form-horizontal.form-seperated(role="form", name='datetime-picker')
                        .form-body
                            .form-group
                                label.col-md-3.control-label Default
                                .col-md-6
                                    .input-group.datetimepicker-default.date
                                        input.form-control(type='text', name='datetime')
                                        span.input-group-addon
                                            i.fa.fa-calendar
                            .form-group
                                label.col-md-3.control-label Disable date
                                .col-md-6
                                    .input-group.datetimepicker-disable-date.date
                                        input.form-control(type='text', name='time')
                                        span.input-group-addon
                                            i.fa.fa-clock-o
                            .form-group
                                label.col-md-3.control-label Disable time
                                .col-md-6
                                    .input-group.datetimepicker-disable-time.date
                                        input.form-control(type='text', name='date')
                                        span.input-group-addon
                                            i.fa.fa-calendar
                            .form-group
                                label.col-md-3.control-label Events and linked pickers
                                .col-md-6
                                    .input-group.datetimepicker-start.date.mbl
                                        input.form-control(type='text', name='datetime_event_start')
                                        span.input-group-addon
                                            i.fa.fa-calendar
                                .col-md-6.col-md-offset-3
                                    .input-group.datetimepicker-end.date
                                        input.form-control(type='text', name='datetime_event_end')
                                        span.input-group-addon
                                            i.fa.fa-clock-o
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button.btn.btn-success(type='button') Save changes
