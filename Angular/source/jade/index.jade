    #date-picker-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-default-label', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                    h4#modal-default-label.modal-title Date Picker
                .modal-body
                   form.form-horizontal.form-seperated(role="form")
                        .form-body
                            .form-group
                                label.col-md-3.control-label Default
                                .col-md-5
                                    input.datepicker-default.form-control(type='text', data-date-format='dd/mm/yyyy', placeholder='dd/mm/yyyy')

                            .form-group
                                label.col-md-3.control-label Format
                                .col-md-5
                                    input.datepicker-default.form-control(type='text', data-date-format='mm-dd-yyyy', placeholder='mm-dd-yyyy')

                            .form-group
                                label.col-md-3.control-label Start with years
                                .col-md-5
                                    .input-group
                                        input.datepicker-years.form-control(type='text')
                                        .input-group-addon
                                            i.fa.fa-calendar
                            .form-group
                                label.col-md-3.control-label Range
                                .col-md-8
                                    .input-group.input-daterange
                                        input.form-control(type='text', name='startdate')
                                        span.input-group-addon to
                                        input.form-control(type='text', name='enddate')
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button.btn.btn-success(type='button') Save changes
    #clockface-picker-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-default-label', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                    h4#modal-default-label.modal-title Clockface Picker
                .modal-body
                    form.form-horizontal.form-seperated(role="form")
                        .form-body
                            .form-group
                                label.col-md-3.control-label Default
                                .col-md-4
                                    input.clockface-default.form-control(type='text', value='2:30 PM', data-format='hh:mm A')
                            .form-group
                                label.col-md-3.control-label Clockface Inline
                                .col-md-4
                                    .clockface-inline.well(style='padding: 0; float: left;')
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button.btn.btn-success(type='button') Save changes
    #lightbox-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-default-label', aria-hidden='true')
        .modal-dialog
